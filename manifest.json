{
  "manifest_version": 3,
  "name": "DysCover",
  "version": "1.0",
  "description": "Tool for optimising web accessibility for dyslexic web users.",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "72": "assets/icon-72x72.png",
    "96": "assets/icon-96x96.png",
    "128": "assets/icon-128x128.png",
    "144": "assets/icon-144x144.png",
    "152": "assets/icon-152x152.png",
    "192": "assets/icon-192x192.png",
    "512": "assets/icon-512x512.png"
  }
}